<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- main page servlet -->
    <servlet>
        <servlet-name>MainPageServlet</servlet-name>
        <servlet-class>servlets.MainPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainPageServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <!-- validate user servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- logout servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- registration servlet -->
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>servlets.RegistrationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <!-- room request servlet -->
    <servlet>
        <servlet-name>RoomRequestServlet</servlet-name>
        <servlet-class>servlets.RoomRequestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RoomRequestServlet</servlet-name>
        <url-pattern>/room_request</url-pattern>
    </servlet-mapping>

    <!-- invoice servlet -->
    <servlet>
        <servlet-name>InvoiceServlet</servlet-name>
        <servlet-class>servlets.InvoiceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>InvoiceServlet</servlet-name>
        <url-pattern>/invoice</url-pattern>
    </servlet-mapping>

    <!-- user requests servlet -->
    <servlet>
        <servlet-name>UserRequestsServlet</servlet-name>
        <servlet-class>servlets.UserRequestsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserRequestsServlet</servlet-name>
        <url-pattern>/requests</url-pattern>
    </servlet-mapping>

    <!-- open requests servlet -->
    <servlet>
        <servlet-name>OpenRequestsServlet</servlet-name>
        <servlet-class>servlets.OpenRequestsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OpenRequestsServlet</servlet-name>
        <url-pattern>/open-requests</url-pattern>
    </servlet-mapping>
</web-app>